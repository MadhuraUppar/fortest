name: Example Workflow

on:
  pull_request:
    types: [opened, synchronize]
  workflow_dispatch: {}

jobs:
  job1:
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    steps:
      - name: Say Hello
        run: echo "Hello"

  job2:
    runs-on: ubuntu-latest
    needs: job1
    if: ${{ needs.job1.result == 'skipped' && github.event_name == 'workflow_dispatch' }}
    steps:
      - name: First Job Skipped
        run: echo "First job is skipped"
